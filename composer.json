{
    "name": "doncem/xframe",
    "type": "library",
    "description": "A lightweight annotation based MVC framework",
    "keywords": [
        "php",
        "light",
        "lightweight",
        "framework",
        "annotation"
    ],
    "authors": [
        {
            "name": "Linus Norton",
            "homepage": "http://www.linusnorton.co.uk",
            "role": "Developer"
        },
        {
            "name": "Jason Paige",
            "homepage": "http://www.jasonpaige.co.uk",
            "role": "Developer"
        },
        {
            "name": "Donatas Martinkus",
            "email": "donatasmart@gmail.com",
            "homepage": "http://www.donatasmart.lt",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/doncem/annotations"
        }
    ],
    "require": {
        "php": "^7.0",
        "minime/annotations": "dev-type-upgrade as 3.0.x-dev",
        "twig/twig": "~v2.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "dev-master",
        "phpunit/phpunit": "dev-master"
    },
    "suggest": {
        "doctrine/orm": "For the use of EntityManager injected into application for you already"
    },
    "autoload": {
        "psr-4" : {
            "Xframe\\" : "lib/Xframe"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "Xframe\\" : "test/lib/Xframe"
        }
    },
    "bin": ["script/xframe", "script/xframe.php"]
}
